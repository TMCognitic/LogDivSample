@page "/"

<PageTitle>Home</PageTitle>

<div>
    <input type="text" @bind-value="Text" /><br/>
    Error : <input type="checkbox" @bind-value="Error" /><br/>
    <button @onclick="OnSend">Send</button>
</div>


@code
{
    public string? Text { get; set; }
    public bool Error { get; set; }

    [Inject]
    private LogMessenger LogMessenger { get; set; } = null!;

    private void OnSend()
    {
        LogMessenger.Send(new Message(Text!, Error));
    }
}
